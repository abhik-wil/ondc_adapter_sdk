{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@generated/*": ["./src/generated/*"],
    }
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
